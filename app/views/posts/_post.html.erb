 <div id="post-<%= post.id%>" class="panel panel-default">
   <div class="panel-heading">
     <%= post.user.display_name %>
   </div>
   <div class="panel-body">
     <span id= "post-thumbsup-<%= post.id %>" class="label label-success"><%= post.likes.count %>­ЪЉЇ</span>
     <%= post.content %>
     <div class="text-right">
       <span id="post-like-<%= post.id%>">
         <%= render :partial => "like", :locals => {:post => post} %>
       </span>
       <% if current_user && post.user == current_user %>
       <p class="pull-right">
         <%= link_to("тѕажЎц", post_path( post), :remote => true, method: :delete,class:"btn btn-danger" )%>
       </p>
       <% end %>
     </div>
   </div>
 </div>
